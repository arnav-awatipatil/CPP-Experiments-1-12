#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;
class Person {
protected:
    string name;
    int age;

public:
    // Pure virtual functions
    virtual void getdata() = 0;
    virtual void putdata() = 0;
    // Virtual destructor (good practice)
    virtual ~Person() {} 
};

// ---

// Derived Class 1: Professor
class Professor : public Person {
private:
    int publications;
    // Class-specific static counter for Professor IDs
    static int next_id; 
    int cur_id;

public:
    // Constructor assigns a sequential Professor ID
    Professor() {
        cur_id = ++next_id; 
    }

    void getdata() override {
        // Reads: name, age, publications
        cin >> name >> age >> publications;
    }

    void putdata() override {
        // Prints: name, age, publications, cur_id
        cout << name << " " << age << " " << publications << " " << cur_id << endl;
    }
};

// Initialize the Professor's static counter
int Professor::next_id = 0;

// ---

// Derived Class 2: Student
class Student : public Person {
private:
    int marks[6];
    int sum_of_marks;
    // Class-specific static counter for Student IDs
    static int next_id;
    int cur_id;

public:
    // Constructor initializes sum and assigns a sequential Student ID
    Student() : sum_of_marks(0) {
        cur_id = ++next_id; 
    } 

    void getdata() override {
        // Reads: name, age, and 6 marks
        cin >> name >> age;
        sum_of_marks = 0; // Reset sum
        for (int i = 0; i < 6; ++i) {
            cin >> marks[i];
            sum_of_marks += marks[i]; // Calculate sum
        }
    }

    void putdata() override {
        // Prints: name, age, sum of marks, cur_id
        cout << name << " " << age << " " << sum_of_marks << " " << cur_id << endl;
    }
};

// Initialize the Student's static counter
int Student::next_id = 0;
int main(){

    int n, val;
    cin>>n; //The number of objects that is going to be created.
    Person *per[n];

    for(int i = 0;i < n;i++){

        cin>>val;
        if(val == 1){
            // If val is 1 current object is of type Professor
            per[i] = new Professor;

        }
        else per[i] = new Student; // Else the current object is of type Student

        per[i]->getdata(); // Get the data from the user.

    }

    for(int i=0;i<n;i++)
        per[i]->putdata(); // Print the required output for each object.

    return 0;

}
