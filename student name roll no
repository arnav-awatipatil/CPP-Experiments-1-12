#include <iostream>
using namespace std;
class student {
	int roll;
	string name;
	
public:
	void acceptdata(){
		cout<<"Enter roll number:";
		cin>>roll;
		cin.ignore();
		cout<<"Enter name:";
		getline(cin,name);
	}
	
	void displaydata(){
		cout<<"\n Student details:\n";
		cout<<"Roll no.:\n";
		cout<<("Name:");
	}
};
int main(){
	student s1;
	s1.acceptdata();
	s1.displaydata();
	return 0;
}
	